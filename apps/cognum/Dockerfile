# Build the docker image with `npx nx docker-build cognum`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t cognum`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system cognum && \
          adduser --system -G cognum cognum

COPY dist/apps/cognum cognum
RUN chown -R cognum:cognum .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix cognum --omit=dev -f install

CMD [ "node", "cognum" ]
